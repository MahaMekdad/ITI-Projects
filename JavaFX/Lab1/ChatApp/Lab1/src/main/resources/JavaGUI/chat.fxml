<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="520.0" prefWidth="381.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaGUI.ChatController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <BorderPane>
         <left>
            <ImageView fx:id="userPic" fitHeight="98.0" fitWidth="126.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@images/original.jpg" />
               </image>
            </ImageView>
         </left>
         <center>
            <Label fx:id="nameLabel" text="JETS" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
      <ScrollPane fitToWidth="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <content>
            <VBox fx:id="vContentArea" />
         </content>
      </ScrollPane>
      <TextField fx:id="textField" />
   </children>
</VBox>
